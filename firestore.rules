rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Bills collection - stores base64 images directly
    match /bills/{billId} {
      // Allow read if user owns the bill
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and sets correct userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the bill (for chat history updates)
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the bill
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // User profiles (if you add them later)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Gamification: User gamification profiles
    match /user_gamification/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Gamification: Point transactions
    match /point_transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Transactions are immutable
    }
    
    // Gamification: User achievements
    match /user_achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Achievements are immutable
    }
    
    // Gamification: Daily quests
    match /daily_quests/{questId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Gamification: Onboarding progress
    match /onboarding_progress/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Gamification: Household appliances
    match /household_appliances/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Monthly challenges
    match /monthly_challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
    }
  }
}
